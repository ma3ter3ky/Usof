{
  "root": true,
  "env": {
    "es2022": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },

  "extends": ["standard", "prettier"],
  "plugins": ["import", "n", "promise"],
  "rules": {
    "no-console": "off",
    "import/no-unresolved": "error",
    "camelcase": [
      "error",
      {
        "properties": "never",
        "ignoreDestructuring": true,
        "ignoreImports": true
      }
    ]
  },
  "ignorePatterns": ["node_modules/", "dist/", "coverage/", "uploads/"],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".mjs", ".cjs", ".json"]
      }
    }
  }
}
